<div class="errors"></div>
<form id="review-form">
  <div class="review-ratings">
    <div class="row">
      <%= JST["reviews/_rating"]({ name: "overall", text: "Overall"}) %>
      <%= JST["reviews/_rating"]({ name: "atmosphere", text: "Atmosphere"}) %>
      <%= JST["reviews/_rating"]({ name: "family_friendliness", text: "Family Friendliness"}) %>
    </div>
    <div class="row">
      <%= JST["reviews/_rating"]({ name: "intensity", text: "Intensity"}) %>
      <%= JST["reviews/_rating"]({ name: "wait_times", text: "Wait Times"}) %>
      <%= JST["reviews/_rating"]({ name: "cost", text: "Cost"}) %>
    </div>
  </div>

  <hr>

  <div class="form-group review-form">
    <label for="review_title">Title</label>
    <input type="text"
           name="review[title]"
           class="form-control"
           id="review_title">

    <label for="review_body">Body</label>
    <textarea name="review[body]"
              id="review_body"
              class="form-control"
              value="Write your review here..."></textarea>

    <input type="submit" 
           value="Submit Review"
           class="btn btn-primary review-btn"
           id="submit-review">
  </div>
</form>